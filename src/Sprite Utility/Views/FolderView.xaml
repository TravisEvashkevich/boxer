<UserControl x:Class="Boxer.Views.FolderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="300" Width="300">
    <UserControl.DataContext>
        <Binding Path="FolderView" Source="{StaticResource Locator}"/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Folder Display Name: " HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="10,0,0,0" TextWrapping="Wrap" Text="{Binding Folder.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" VerticalAlignment="Top" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Boxer Parent" Margin="10,0,0,0" ToolTip="What folder does this sit in?"/>
                <ComboBox Name="FilePathBox" Width="150" Margin="10,0,0,0" ItemsSource="{Binding Path=FoldersList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
